{% assign items = productList.value.products.size %}
<span class="strap__upsell-title">change the look, add an extra strap: </span>

<div class="strap__upsell-container">
  <div class="strap-look-slider owl-carousel strap__upsell-content">
    {% for strap in productList.value.products %}
      <div class="strap__upsell-item">
        <div class="strap__upsell-item-img">
          <img src="{{ strap.featured_image | img_url: '200x200' }}">
        </div>
        <div class="strap__upsell-item-title">
          {{ strap.title }}
        </div>
        <div class="strap__upsell-item-price">
          + {{ strap.price | money }}
        </div>
        <div class="strap__upsell-item-atc" data-variant_id="{{ strap.selected_or_first_available_variant.id }}">
          <img src="{{ 'ADD.svg' | asset_url }}">
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% comment %}
{% assign items = productList.value.products.size %}
<span class="strap__upsell-title">change the look, add an extra strap: </span>

<div class="strap__upsell-container">
  <span class="strap__upsell-arrow strap__upsell-prev-arrow {% if items <= 3 %} hidden {% endif %}">❮</span>
  <div class="strap__upsell-content">
    {% for strap in productList.value.products %}
      <div class="strap__upsell-item">
        <div class="strap__upsell-item-img">
          <img src="{{ strap.featured_image | img_url: '200x200' }}">
        </div>
        <div class="strap__upsell-item-title">
          {{ strap.title }}
        </div>
        <div class="strap__upsell-item-price">
          + {{ strap.price | money }}
        </div>
        <div class="strap__upsell-item-atc" data-variant_id="{{ strap.selected_or_first_available_variant.id }}">
          ADD
        </div>
      </div>
    {% endfor %}
  </div>
  <span class="strap__upsell-arrow strap__upsell-next-arrow {% if items <= 3 %} hidden {% endif %}">❯</span>
</div>
{% endcomment %}
{% style %}
.strap__upsell-container{
  position:relative;
  margin-bottom:30px;
}
.strap__upsell-content{
  display: grid;
  overflow-x: scroll;
  grid-auto-flow: column;
  margin: 0px;
  -ms-overflow-style: none;
  scrollbar-width: none;
}
.strap__upsell-content::-webkit-scrollbar { 
    display: none;
}
.strap__upsell-item{
  text-align:center;
  width: 170px;
  text-align: center;
  font-size: 16px;
  line-height: normal;
}
.strap__upsell-item-title{
  min-height: 50px;
}
.strap__upsell-item-price{
  padding-bottom:10px;
  padding-top:10px;
}

.strap__upsell-item-atc.clicked{
  cursor:pointer;
  color:#301210;
}
.strap__upsell-item:not(:first-child){
  margin-left: 10px;
}
.strap__upsell-arrow.hidden {
  display:none;
}
.strap__upsell-prev-arrow{
  position: absolute;
  top: 150px;
  left: 0px;
  cursor:pointer;
}
.strap__upsell-next-arrow{
  position: absolute;
  top: 150px;
  right: 0px;
  cursor:pointer;
}

/* strap change the look */

.strap__upsell-title {
    font-size: 24px;
    line-height: 28.27px;
    text-transform: capitalize;
    font-family: 'Miller';
    color: #301210;
    margin-bottom: 20px;
    display: block;
}

.strap__upsell-item-title {
    font-size: 21px;
    color: #B7782C;
    font-family: 'Miller';
    font-weight: 500;
    line-height: 24.27px;
    margin-top: 15px;
}

.strap__upsell-item-price {
    font-size: 16px;
    line-height: 29.98px;
    letter-spacing: normal;
    font-family: 'Cairo';
}

.strap__upsell-item {
    position: relative;
}

.strap__upsell-item-atc {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    padding: 5px;
    border-radius: 100%;
}

.strap-look-slider .owl-dots {
    width: 100%;
    display: flex;
    border-radius: 20px;
}
.strap-look-slider .owl-dots .owl-dot {
  width: 100%;
    background: rgb(168 170 172 / 50%) !important;
    height: 4px;
    display: block;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
}

.strap-look-slider .owl-dots .owl-dot.active {
    background: #EB4E24 !important;
    border-radius: 20px;
    height: 6px;
}

@media screen and (max-width: 768px) {
  .strap__upsell-item{
    width: 100px;
    font-size: 14px;
  }

  .strap__upsell-prev-arrow, .strap__upsell-next-arrow{
    top: 95px;
  }

  .strap__upsell-title {
        font-size: 16.8px;
    line-height: 20px;
    padding-top: 20px;
  }
}
@media screen and (max-width: 600px) {
.strap__upsell-item-title {
    font-size: 15px;
    line-height: 18px;
    min-height: unset;
}

.strap__upsell-item-price {
    font-size: 14px;
    line-height: 20px;
}
}
  
{% endstyle %}