{%- style -%}
.btn-discount-product-atc{
    background:black;
}
.bag-special{
    background:{{ settings.discount_product_bg_color }};
    padding: 15px 25px;
    font-size:16px;
}
.bag-special .cart__row {
    margin-bottom:10px;
}
.bag-special__title{
    font-size: 18px;
    border-bottom: 2px solid #cfcfcd;
    padding-top: 11px;
    padding-bottom: 20px;
    text-transform:uppercase;
    font-size: .9em;
    color: #60925b;
    letter-spacing: .2em;
    font-family: Futura,sans-serif;
}

.bag-special__title .inner-title{
    font-weight:700;
}

.bag-special .js-qty__wrapper{
    max-width:130px;
    height:36px;
}
.js-qty__adjust_2 {
    cursor: pointer;
    position: absolute;
    display: block;
    top: 0;
    bottom: 0;
    border: 0 none;
    background: none;
    text-align: center;
    overflow: hidden;
    padding: 0 5px;
    line-height: 1;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    transition: all .2s ease-out;
    z-index: 2;
    fill: #000;
    color:black;
}
.bag-special__price-qty{
    display:flex;
    align-items: start;
    flex-direction: column;
}

.bag-special__price-qty .cart__price{
    margin-right:10px;
}
.bag-special .cart__product-meta{
    padding: 2px 0;
}

.cart-special-image{
    max-width:104px;
}

.bag-special .js-qty__num{
    font-size:16px;
    padding:0;
}

.bag-special__line-break{
    height:1px;
    border-bottom:1px solid #cfcfcd;
    margin-bottom: 15px;
}

/* bag__special New css */

