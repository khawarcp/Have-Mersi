    background-color: transparent;
    border: 1px solid #A8AAAC66;
    border-radius: 20px;
    padding: 20px;
}

.bag-special .cart__row {
    border: 0px !important;
    padding-top: 5px;
    padding-bottom: 0px !important;
    margin: 0px !important;
}

.bag-special .cart__row .grid {
    margin: 0px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

