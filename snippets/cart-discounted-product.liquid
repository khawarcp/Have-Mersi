    font-size: 20px;
    font-family: 'Miller';
    margin-bottom: 10px;
}

.bag-special .cart__price .pn-total-line-item {
    color: #a8aaac !important;
    position: relative;
}

.bag-special .cart__price .pn-total-line-item span {
    color: #ff3232 !important;
}

.bag-special .cart__row .grid__item button {
    margin: 0px;
    background-color: #EB4E24;
    font-size: 14px;
