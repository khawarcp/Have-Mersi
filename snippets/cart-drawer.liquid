{% if cart.item_count == 0 %}
  <style>
    .drawer__close-button {
      top: 5px;
    }
    .gamification-div {
      background-color: transparent;
    }

    #CartDrawer .drawer__fixed-header + .drawer__inner {
      padding: 40px;
    }

    #CartDrawer .drawer__fixed-header + .drawer__inner:before {
      top: 0;
    }
  </style>
{% endif %}




{% if settings.cart_type == 'drawer' %}
  <div
    id="CartDrawer"
    class="drawer drawer--right drawer--has-fixed-footer">
    <div
      class="drawer__fixed-header">
      <div
        class="drawer__header-custom appear-animation appear-delay-1">
        <div class="drawer-heading">
          <h3>your mersi cart</h3>
        </div>
        <div
          class="drawer__close">
          <button
            type="button"
            class="drawer__close-button js-drawer-close">
            {% include 'icon-close-union' %}
            <span
              class="icon__fallback-text">{{ 'cart.general.close_cart' | t }}</span>
          </button>
        </div>
        <div
          class="gamification-div">
          {% render 'sidecart-gamification' %}
        </div>
      </div>

    </div>


    <div class="drawer__inner">
      <div id="CartContainer"  class="drawer__cart"></div>
    </div>

  </div>
{% endif %}
{% comment %}
{% if settings.cart_type == 'drawer' %}
<div id="CartDrawer" class="drawer drawer--right drawer--has-fixed-footer">
<div class="drawer__fixed-header">
<div class="drawer__header appear-animation appear-delay-1">
<div class="h2 drawer__title">{{ 'cart.general.title' | t }}</div>
<div class="drawer__close">
<button type="button" class="drawer__close-button js-drawer-close">
{% include 'icon-close' %}
<span class="icon__fallback-text">{{ 'cart.general.close_cart' | t }}</span>
</button>
</div>
</div>
{% render 'sidecart-gamification' %}
</div>
<div class="drawer__inner">
<div id="CartContainer" class="drawer__cart"></div>
</div>
</div>
{% endif %}
{% endcomment %}