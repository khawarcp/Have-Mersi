{% if collection.metafields.custom.content_blocks.value != blank %}
  {% style %}
    .collection-cb{
      padding:20px 0 30px 0;
    }
    .collection-cb__grid{
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 2rem;
    }
    .collection-cb__column{
      display:flex;
      justify-content: space-between;
      align-items:start;
    }

    .collection-cb__column > :not([hidden]) ~ :not([hidden]) {
      margin-right: calc(1rem);
      margin-left: calc(1rem);
    }

    .collection-cb__column p{
      line-height: 1.2em;
      font-size: 14px;
      color:#333;
      margin-bottom:0 !important;
      font-weight:400;
    }

    .collection-cb__column h4,
    .collection-cb__column p{
      letter-spacing: normal;
    }

    .collection-cb__column h4{
      margin-bottom:15px;
      font-size: 16px;
      line-height: 1.2em;
      font-weight:600;
    }

    .collection-cb__image{
      border-radius: 100%;
      width: 70px;
      height: 70px;
      object-fit: cover;
    }

    @media screen and (max-width:650px){
        .collection-cb__grid{
          grid-template-columns: repeat(1, minmax(0, 1fr));
        }

         .collection-cb__grid{
          gap:1rem !important;
        }
    }

    {% if template =='collection' %}
      .collection-cb{
        padding-top:50px;
        background:#EBEEEA;
      }
     
    {% endif %}

  {% endstyle %}

<section class="collection-cb">
  <div class="page-width">
    <div class="collection-cb__grid">
    {% for content in collection.metafields.custom.content_blocks.value  %}
      <div class="collection-cb__column">
        <img class="collection-cb__image" src="{{content.image | image_url: width: 200}}">
        <div>
          <h4>{{content.title}}</h4>
          <p>{{content.description}}</p>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</section>
{% endif %}