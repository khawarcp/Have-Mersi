{%- include 'bold-ro' -%}
{%- include 'bold-product' with product, hide_action: 'break', output: 'none' -%}

{% if template == 'product.landing-page' %}
	{% include 'product-template-v2',
      image_position: section.settings.image_position,
      image_container_width: section.settings.image_size,
      section_id: product.id,
      social: section.settings.social_enable,
      thumbnail_position: section.settings.thumbnail_position
    %}
{% else %}
	{% include 'product-template',
      image_position: section.settings.image_position,
      image_container_width: section.settings.image_size,
      section_id: product.id,
      social: section.settings.social_enable,
      thumbnail_position: section.settings.thumbnail_position
    %}
{% endif %}

{% if collection %}
  {% unless isModal %}
    <div class="page-width return-link-wrap">
      <div class="text-center page-content page-content--bottom">
      <a href="{% if collection.handle == 'frontpage' %}/{% else %}{{ collection.url }}{% endif %}" class="btn btn--small return-link">
        {% include 'icon-arrow-left' %} {{ 'products.general.collection_return' | t: collection: collection.title }}
      </a>
    </div>
    </div>
  {% endunless %}
{% endif %}

<script>
  theme.settings.recentlyViewedEnabled = {{ section.settings.recently_viewed_enable | default: 'false' }};
</script>

{% schema %}
  {
    "name": "Product pages",
    "settings": [
      {
        "type": "select",
        "id": "image_position",
        "label": "Images position",
        "default": "right",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "image_size",
        "label": "Image size",
        "default": "medium",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ]
      },
      {
        "type": "select",
        "id": "thumbnail_position",
        "label": "Thumbnail position",
        "default": "beside",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "beside",
            "label": "Next to image"
          },
          {
            "value": "below",
            "label": "Below image"
          }
        ]
      },
      {
        "type": "select",
        "id": "description_style",
        "label": "Description position",
        "default": "default",
        "options": [
          {
            "value": "default",
            "label": "Next to images"
          },
          {
            "value": "full",
            "label": "Below images"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "social_enable",
        "label": "Enable social sharing",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "related_enable",
        "label": "Show related products",
        "default": true
      },
      {
        "type": "range",
        "id": "related_count",
        "label": "Number of related products",
        "default": 5,
        "min": 2,
        "max": 6,
        "step": 1
      },
      {
        "type": "checkbox",
        "id": "recently_viewed_enable",
        "label": "Show recently viewed products",
        "default": true,
        "info": "Only visible outside of the Theme Editor"
      },
      {
        "type": "range",
        "id": "recent_count",
        "label": "Number of recent products",
        "default": 5,
        "min": 2,
        "max": 10,
        "step": 1
      },
      {
        "type": "checkbox",
        "id": "if_value_adds",
        "label": "Show value adds section",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "add_img_first",
        "label": "Add value Image 1"
      },
      {
        "type": "text",
        "id": "add_text_first",
        "label": "Add value Text 1"
      },
      {
        "type": "image_picker",
        "id": "add_img_second",
        "label": "Add value Image 2"
      },
      {
        "type": "text",
        "id": "add_text_second",
        "label": "Add value Text 2"
      },
      {
        "type": "image_picker",
        "id": "add_img_third",
        "label": "Add value Image 3"
      },
      {
        "type": "text",
        "id": "add_text_third",
        "label": "Add value Text 3"
      }
    ]
  }
{% endschema %}
