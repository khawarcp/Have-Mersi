{% schema %}
{
  "name": "Best Sellers Mobile",
  "class": "best-sellers-mobile",
  "settings": [{
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
  }],
  "presets": [{
      "name": "Best Sellers Mobile"
  }]
}
{% endschema %}

{% style %}
@media screen and (min-width: 769px) {
    .best-sellers-mobile {
      display: none;
    }
}

.best-sellers-mobile {
    padding: 10px 0;
    background: #fff;
}

.best-sellers-mobile .scroller-container {
    display: flex;
    padding-right: 10px;
    padding-left: 10px;
}

.best-sellers-mobile ul {
    display: grid;
    overflow: scroll;
    margin: 0 10px 0 12px;
    grid-auto-flow: column;
    /* grid-gap: 0 16px; */
    grid-template-columns: repeat(auto-fit, minmax(95px, 1fr));
    -webkit-overflow-scrolling: touch;
    -ms-overflow-style: none;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    scrollbar-color: transparent transparent;
    scrollbar-width: 0;
    scrollbar-width: none;
}

.best-sellers-mobile ul::-webkit-scrollbar {
    display: none;
}

.best-sellers-mobile ul>* {
    scroll-snap-align: start;
}

.best-sellers-mobile ul li {
    min-width: 90px;
    line-height: 1;
    list-style: none;
    text-align: left;
}

.best-sellers-mobile ul li a {
    font-family: Chivo,sans-serif;
    font-size: 14px;
    color: #000000;
    text-decoration: none;
    display: block;
    text-align: center;
}

.best-sellers-mobile ul li img {
    pointer-events: none;
    object-fit: cover;
    border-radius: 50%;
    display: block;
    margin: 0 auto 8px;
} 

.best-sellers-mobile ul li:last-child a {
    color: #e61734;
}

{% endstyle %}
<script>
    document.addEventListener('load',function(){
        const mobileBestSellerLink = document.querySelectorAll('.Link--secondary')
        mobileBestSellerLink.forEach(function(element) {
            element.addEventListener('click',function(e){
                ga('send', {
                    'hitType': 'event', 
                    'eventCategory': 'Mobile Best Sellers', 
                    'eventAction': 'click', 
                    'eventLabel': e.target.innerText
                 });  
            })
        })
    })
</script>