<div class="scroller-container">
  <ul class="scroller">
    {% for link in linklists[section.settings.menu].links %}
    <li>
      <a href="{{ link.url }}" class="Link Link--secondary">
        {% if link.object.metafields.custom.mobile_navigation.value != blank %}
          <img class="scroller-img" src="{{ link.object.metafields.custom.mobile_navigation.value | img_url: '156x' }}" width="78" height="78" loading="lazy">
        {% else %}
          <img class="scroller-img" src="{{ link.object.featured_image | img_url: '156x' }}" width="78" height="78" loading="lazy">
        {% endif %}
       {{ link.title | escape }}
      </a>
    </li>
    {%- endfor -%}
  </ul>
</div>

