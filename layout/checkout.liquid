    .stepper-wrapper {
      margin-top: 28px;
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }
    .stepper-item {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      flex: 1;

      @media (max-width: 768px) {
        font-size: 12px;
      }
    }
    .stepper-item::before {
      position: absolute;
      content: "";
      border-bottom: 8px solid #EEE;
      width: 100%;
      top: 18px;
      left: -50%;
      z-index: 2;
    }
    .stepper-item::after {
      position: absolute;
      content: "";
      border-bottom: 8px solid #EEE;
      width: 100%;
      top: 18px;
      left: 50%;
      z-index: 2;
    }
    .stepper-item .step-counter {
      position: relative;
      z-index: 5;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #EEE;
      margin-bottom: 6px;
      border: 1px solid #EEE;
      font-weight:bold;
    }
    .stepper-item.active {
      font-weight: bold;
    }
    .stepper-item.completed .step-counter {
      background-color: #60925B;
      border-color:#60925B;
      color:#60925B;
      color:white;
      font-weight:bold;
    }
    .stepper-item.active .step-counter{
      border: 2px solid #60925B;
      background: white;
    }
    .stepper-item.completed::before,
    .stepper-item.active::before{
      display:none;
    }
    .stepper-item.completed::after {
      position: absolute;
      content: "";
      border-bottom: 8px solid #60925B;
      width: 100%;
      top: 18px;
      left: 50%;
      z-index: 3;
    }
    .stepper-item:first-child::before {
      content: none;
    }
    .stepper-item:last-child::after {
      content: none;
    }
