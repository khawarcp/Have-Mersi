      {% if settings.checkout_show_blurb %}
        var showBlurb = true;
      {% else %}
        var showBlurb = false;
      {% endif %}

      let steps = `
        <div class="stepper-wrapper">
          <div class="stepper-item completed" id="step_information">
            <div class="step-counter">1</div>
          </div>
          <div class="stepper-item" id="step_shipping">
            <div class="step-counter">2</div>
          </div>
          <div class="stepper-item" id="step_payment">
            <div class="step-counter">3</div>
          </div>
        </div>
      `;
  
      Checkout.$(document).ready(function(){
        Checkout.$('.breadcrumb').before('<div id="countdown-timer">We are reserving your cart for <span id="countdown-minutes"></span> minutes!</div>');
        Checkout.$('.breadcrumb').after(steps);

        if ( Shopify.Checkout.step == 'shipping_method') {
          Checkout.$('#step_shipping').addClass('active');
        }

        if ( Shopify.Checkout.step == 'payment_method') {
          Checkout.$('#step_shipping').addClass('completed');
          Checkout.$('#step_payment').addClass('active');
        }

        var timerStart = 600;

        var xInternal = setInterval(function() {
          timerStart -=1;
          
          var minutes = Math.floor(timerStart / 60);
          var seconds = timerStart - minutes * 60;

          var timeText = minutes.toString().padStart(1, '0') + ':' + seconds.toString().padStart(1, '0');
          Checkout.$('#countdown-minutes').text(timeText);

          if ( timerStart <= 0){
            Checkout.$('#countdown-timer').html('Order reservation ended.');
            clearInterval(xInternal);
          }
        }, 1000);
      });

      window.addEventListener('load', (event) => {
      if (Shopify.Checkout.step == 'contact_information') {
        window.scrollTo(0, 0);
        document.querySelector('.order-summary-toggle').click();
      }        
    });
    </script>
