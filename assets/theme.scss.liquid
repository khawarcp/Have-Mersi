    li,
    li button {
      padding: 0;
      width: $slideshow-bar-width;
      height: $slideshow-bar-hit-area;
    }

    // Position thin bar elements in middle of hit area
    li button::before,
    li button::after {
      content: '';
      width: $slideshow-bar-width;
      height: $slideshow-bar-height;
      border-radius: 0;
      position: absolute;
      left: 0;
      top: 50%;
      -webkit-transform: translateY(-($slideshow-bar-height / 2));
